+                  __yield();
+                  __yield();
+                  __yield();
+                  __yield();
+                  __yield();
+                  __yield();
+                  __yield();
+              }
+
+              // waiting longer than we should, let's give other threads a chance to recover
+              std::this_thread::yield();
+          }
+      }
+    #endif // CRILL_ARM_32BIT
