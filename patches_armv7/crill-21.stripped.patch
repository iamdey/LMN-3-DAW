+  #if CRILL_ARM_32BIT
+      template <std::size_t N0, std::size_t N1, typename Predicate>
+      void progressive_backoff_wait_armv7(Predicate&& pred)
+      {
+          for (int i = 0; i < N0; ++i)
+          {
+              if (pred())
+                  return;
+          }
+
+          while (true)
+          {
+              for (int i = 0; i < N1; ++i)
+              {
+                  if (pred())
+                      return;
+
+                  __yield();
+                  __yield();
+                  __yield();
+                  __yield();
+                  __yield();
+                  __yield();
+                  __yield();
+                  __yield();
+                  __yield();
+                  __yield();
